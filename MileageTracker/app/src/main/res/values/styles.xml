<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="Item.Top">
        <item name="android:background">@color/top_item</item>
    </style>

    <style name="Item.Sticky">
        <item name="android:layout_height">@dimen/sticky_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Item.Bottom">
        <item name="android:background">@color/bottom_item</item>
    </style>

    <style name="Item.Bottom.Alt">
        <item name="android:background">@color/bottom_item_alt</item>
    </style>

    <style name="Wrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Wrapper.Height">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="FullScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FullScreen.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ProfileElements" parent="Wrapper.Height">
        <item name="android:layout_marginBottom">@dimen/spacing_between_views</item>
    </style>

    <style name="ProfileElements.TitleText">
        <item name="android:text">@string/profile_title_text</item>
        <item name="android:textSize">@dimen/profile_title_text_size</item>
    </style>

    <style name="MoreDetailsText" parent="Wrapper.Height">
        <item name="android:paddingBottom">@dimen/spacing_between_views</item>
        <item name="android:text">@string/more_details_text</item>
        <item name="android:textSize">@dimen/profile_title_text_size</item>
    </style>

    <style name="SaveBtn" parent="Wrapper">
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/save_btn_text</item>
        <item name="android:layout_marginTop">@dimen/spacing_between_views</item>
    </style>

    <style name="MainFragment" parent="FullScreen.Vertical">
        <item name="android:padding">@dimen/vertical_pad</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="AvgMpgLayout" parent="FullScreen.Vertical">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/avg_mpg_vpad</item>
    </style>

    <style name="TitleText" parent="Wrapper.Height">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="SubtitleText" parent="TitleText">
        <item name="android:textSize">@dimen/avg_mpg_text_size</item>
        <item name="android:paddingBottom">@dimen/avg_mpg_tv_bottom_pad</item>
    </style>

    <style name="AvgMpgLayout.LineGraph">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/no_padding</item>
    </style>

    <style name="MileageText" parent="Wrapper">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/mileage_text_size</item>
    </style>

    <style name="DateText" parent="Wrapper">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/date_text_size</item>
        <item name="android:minEms">5</item>
    </style>

    <style name="FuelBrandText" parent="MileageText">
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/horizontal_pad</item>
        <item name="android:paddingRight">@dimen/horizontal_pad</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="UnitText" parent="MileageText">
        <item name="android:paddingLeft">@dimen/unit_left_pad</item>
        <item name="android:paddingRight">@dimen/spacing_between_views</item>
        <item name="android:textSize">@dimen/unit_text_size</item>
        <item name="android:text">@string/unit_text</item>
    </style>

    <style name="FullScreen.RecordsList">
        <item name="android:divider">@android:color/darker_gray</item>
        <item name="android:dividerHeight">@dimen/recview_div_height</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
